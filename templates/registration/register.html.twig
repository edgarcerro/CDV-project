{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Registrarse</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        {{ form_errors(registrationForm) }}
                        {{ form_row(registrationForm._token) }}

                        <div class="form-group">
                            <label for="{{ registrationForm.username.vars.id }}">{{ registrationForm.username.vars.label }}</label>
                            {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group">
                            <label for="{{ registrationForm.plainPassword.vars.id }}">Contraseña</label>
                            {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <button type="submit" class="btn btn-lg btn-primary btn-block mb-3">Registrarse</button>
                    
                    </form>
                </div>
                <div class="card-footer">
                    ¿Ya tienes una cuenta? <a href="{{ path('app_login') }}">Inicia sesión aquí</a>.
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
